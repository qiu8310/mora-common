{
  "name": "mora-common",
  "version": "1.0.4",
  "description": "",
  "scripts": {
    "build": "./script.ts clean && ./script.ts exports && tsc && ./script.ts cpStyle && ./script.ts exportsMap && chmod a+x bin/*",
    "build:watch": "./script.ts watch",
    "release": "npm version patch && npm run build && snpm publish && cnpm sync mora-common",
    "toskill": "./script.ts installTo ../skill/node_modules/mora-common",
    "tofantasy": "./script.ts installTo ../fantasy/node_modules/mora-common",
    "test": "jest"
  },
  "bin": {
    "replacer": "bin/replacer.js",
    "indexify": "bin/indexify.js",
    "dts2djson": "bin/dts2djson.js"
  },
  "author": "Mora <qiuzhongleiabc@126.com> (https://qiu8310.github.io/)",
  "license": "MIT",
  "jest": {
    "roots": [
      "src"
    ],
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/helper/"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "peerDependencies": {
    "mora-scripts": "~1.6.4"
  },
  "__peerDependencies": {
    "": "不是强制需要的，只有引用了具体的组件才需要加载对应的依赖，所以不把它放到 peerDependencies 里",
    "alloyfinger": "~0.1.8",
    "tslib": "^1.7.1",
    "mobx": "~3.3.0",
    "mobx-react": "~4.3.3",
    "react": "~16.0.0",
    "react-dom": "~16.0.0",
    "react-router": "~4.2.0",
    "react-router-dom": "~4.2.2",
    "react-side-effect": "^1.1.3",
    "react-transition-group": "^1.2.0"
  },
  "devDependencies": {
    "@types/chokidar": "~1.7.1",
    "@types/core-decorators": "0.10.32",
    "@types/fs-extra": "~4.0.0",
    "@types/jest": "^21.1.1",
    "@types/node": "~7.0.31",
    "@types/react": "~16.0.0",
    "@types/react-dom": "~16.0.0",
    "@types/react-router": "~4.0.15",
    "@types/react-router-dom": "~4.0.8",
    "@types/react-side-effect": "~1.0.5",
    "@types/react-transition-group": "~1.1.0",
    "alloyfinger": "~0.1.10",
    "chokidar": "~1.7.0",
    "es6-promise": "4.1.1",
    "fs-extra": "~4.0.0",
    "jest": "^21.2.1",
    "jsdom": "^11.0.0",
    "loader-utils": "~1.1.0",
    "mobx": "~3.3.0",
    "mobx-react": "~4.3.3",
    "mora-scripts": "1.6.15",
    "react": "~16.0.0",
    "react-dom": "~16.0.0",
    "react-router": "~4.2.0",
    "react-router-dom": "~4.2.2",
    "react-side-effect": "^1.1.3",
    "react-test-renderer": "^16.0.0",
    "react-transition-group": "^1.2.0",
